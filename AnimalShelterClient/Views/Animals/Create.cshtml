@using AnimalShelterClient.Models
@model AnimalShelterClient.Models.Animal

@{
	Layout = "_Layout";
}

<h1 id="title">Add Animal</h1>

<hr />

@using (Html.BeginForm())
{
	@Html.LabelFor(model => model.Name)
	<br>
	@Html.TextBoxFor(model => model.Name)
	<br>
	@Html.LabelFor(model => model.Species)
	<br>
	@Html.TextBoxFor(model => model.Species)
	<br>
	@Html.LabelFor(model => model.Gender)
	<br>
	@Html.TextBoxFor(model => model.Gender)
	<br>
	@Html.LabelFor((model => model.Age))
	<br>
	@Html.TextBoxFor(model => model.Age)
	<br><br>
	<input type="submit" value="Add animal" />
}

<hr />

<p>
	@Html.ActionLink("All animals", "Index", new { version = ApiHelper.ApiVersion})
	|
	@Html.ActionLink("Home", "Index", "Home")
</p>