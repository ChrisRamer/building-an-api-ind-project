@using AnimalShelterClient.Models
@model AnimalShelterClient.Models.Animal

@{
	Layout = "_Layout";
}

<h1 id="title">Animal Details</h1>

<hr />

<p>
	<u><h3>@Model.Name</h3></u>
	<h4><b>Species:</b> @Model.Species</h4>
	<h4><b>Gender:</b> @Model.Gender</h4>
	<h4><b>Age:</b> @Model.Age</h4>
</p>

<hr />

<p>
	@Html.ActionLink("Edit", "Edit", "Animals", new { id = Model.AnimalId, version = ApiHelper.ApiVersion })
	|
	@Html.ActionLink("View all animals", "Index", "Animals", new { version = ApiHelper.ApiVersion })
	|
	@Html.ActionLink("Home", "Index", "Home")
</p>